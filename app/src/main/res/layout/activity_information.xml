<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_40"
        android:gravity="center_horizontal"
        android:text="我的资料"
        android:textColor="#666666"
        android:textSize="@dimen/sp_16"/>


    <LinearLayout
        android:layout_width="@dimen/dp_336"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_20">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/sp_10">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的头像"
                android:textSize="@dimen/sp_14"
                android:layout_alignParentLeft="true"/>
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/information_icon"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_alignParentRight="true"
                fresco:placeholderImage="@drawable/icon"
                fresco:roundAsCircle="true"/>
        </RelativeLayout>
        <View
            android:layout_width="@dimen/dp_336"
            android:layout_height="@dimen/dp_2"
            android:background="@color/gray"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/dp_336"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/sp_10">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的昵称"
                android:textSize="@dimen/sp_14"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:id="@+id/information_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我是吃不胖的小姐姐"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_12"/>
        </RelativeLayout>
        <View
            android:layout_width="@dimen/dp_336"
            android:layout_height="@dimen/dp_2"
            android:background="@color/gray"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="@dimen/dp_336"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/dp_10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/sp_10">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的密码"
                android:textSize="@dimen/sp_14"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:id="@+id/information_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="111111"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View
            android:layout_width="@dimen/dp_336"
            android:layout_height="@dimen/dp_2"
            android:background="@color/gray"/>
    </LinearLayout>
</LinearLayout>