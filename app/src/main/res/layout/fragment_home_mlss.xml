<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_118"
        android:background="@drawable/yuanjiao_bg"
        android:layout_margin="@dimen/dp_5"
        android:orientation="horizontal">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/fragment_home_sdv_image"
            android:layout_width="@dimen/dp_100"
            android:layout_margin="@dimen/dp_10"
            android:layout_height="@dimen/dp_100" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_20"
            android:orientation="vertical">
            <TextView
                android:id="@+id/fragment_home_txt_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingTop="@dimen/dp_20"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/fragment_home_txt_price"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="left"
                android:paddingTop="@dimen/dp_20"
                android:textColor="#ea0e0e"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>