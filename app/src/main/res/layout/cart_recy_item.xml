<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/shapelogin"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_20">
        <CheckBox
            android:id="@+id/cart_recy_cb"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_26"
            android:layout_marginLeft="@dimen/sp_14"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_gravity="center_vertical"/>
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/cart_recy_sdv_image"
            android:layout_width="@dimen/dp_97"
            android:layout_height="@dimen/dp_97"
            android:layout_margin="@dimen/dp_8"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_97"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_2"
            android:orientation="vertical">
            <TextView
                android:id="@+id/cart_recy_txt_title"
                android:layout_width="@dimen/dp_200"
                android:layout_height="0dp"
                android:textSize="@dimen/sp_12"
                android:layout_weight="1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/cart_recy_txt_price"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="match_parent"
                    android:paddingTop="@dimen/dp_30"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#f50909"/>
                <com.bwie.view.MyAddSubView
                    android:id="@+id/cart_recy_subaddview"
                    android:layout_width="@dimen/dp_100"
                    android:paddingTop="@dimen/dp_30"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>