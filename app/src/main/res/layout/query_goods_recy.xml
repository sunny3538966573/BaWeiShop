<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bwie.actvity.SearchShopActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/shapehome">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/query_goods_sdv_image"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_100" />
        <TextView
            android:id="@+id/query_goods_txt_title"
            android:layout_width="@dimen/dp_150"
            android:padding="@dimen/dp_10"
            android:singleLine="true"
            android:maxEms="6"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="@dimen/dp_150"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/query_goods_txt_price"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/dp_10"
                android:textColor="#ff0909"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/query_goods_txt_num"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/dp_10"
                android:textColor="#ff0909"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>