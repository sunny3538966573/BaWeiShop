<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="@dimen/dp_324"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shapelogin"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_10"
        android:padding="@dimen/dp_10">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/myaddress_txt_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:gravity="left"
                android:text="星星"/>
            <TextView
                android:id="@+id/myaddress_txt_phone"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:layout_marginRight="@dimen/dp_20"
                android:gravity="right"
                android:padding="@dimen/dp_10"
                android:text="12345678909"/>
        </LinearLayout>

    <TextView
        android:id="@+id/myaddress_txt_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_12"
        android:layout_marginTop="@dimen/dp_10"
        android:paddingRight="@dimen/dp_20"
        android:text="地址"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/myaddress_rb_whetherDefault"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="设为默认地址"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingRight="@dimen/dp_20"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/myaddress_btn_update"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shapelogin"
                    android:textSize="@dimen/dp_10"
                    android:text="修改"
                    />
                <Button
                    android:id="@+id/myaddress_btn_delete"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dp_10"
                    android:background="@drawable/shapelogin"
                    android:text="删除"
                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>