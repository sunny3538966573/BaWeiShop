<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f1eded"
    android:padding="@dimen/dp_10">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/details_comments_item_simpe"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        fresco:placeholderImage="@drawable/bitmap"
        fresco:roundedCornerRadius="@dimen/dp_50" />

    <TextView
        android:id="@+id/details_comments_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_toRightOf="@id/details_comments_item_simpe"
        android:text="名字" />

    <TextView
        android:id="@+id/details_comments_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_15"
        android:text="2018-12-08 08:26" />

    <TextView
        android:id="@+id/details_comments_item_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/details_comments_item_simpe"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="AAAAAAAAAAAAAAAAAAAAAAAAAAA" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/details_comments_item_data"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/dp_10">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/details_comments_item_image_1"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_141"
            android:layout_below="@id/details_comments_item_data"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_weight="1" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/details_comments_item_image_2"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_141"
            android:layout_below="@id/details_comments_item_data"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_weight="1" />

    </LinearLayout>


</RelativeLayout>
