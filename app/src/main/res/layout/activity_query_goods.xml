<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="@dimen/dp_336"
        android:layout_height="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_36"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/query_goods_image"
            android:src="@drawable/dialog"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_alignParentLeft="true"/>

        <EditText
            android:id="@+id/query_goods_et"
            android:background="@drawable/shapehome"
            android:layout_width="@dimen/dp_264"
            android:layout_height="@dimen/dp_30"
            android:layout_centerHorizontal="true"
            android:hint="请输入进行查询..."/>

        <ImageView
            android:id="@+id/query_goods_search"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:src="@drawable/common_nav_btn_search_n_hdpi"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>


    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/query_goods__xrecy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24">
    </com.jcodecraeer.xrecyclerview.XRecyclerView>

</LinearLayout>