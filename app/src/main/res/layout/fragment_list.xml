<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24">
        <ImageView
            android:id="@+id/fragment_home_dialog"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:src="@drawable/dialog"
            android:layout_centerVertical="true"/>
        <!--<EditText-->
            <!--android:id="@+id/fragment_home_search"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_weight="8"-->
            <!--android:layout_marginLeft="@dimen/dp_10"-->
            <!--android:background="@drawable/shape_edit_search_bg"-->
            <!--android:layout_marginRight="@dimen/dp_10"-->
            <!--android:hint="  请输入..."-->
            <!--android:layout_height="match_parent"/>-->
        <ImageView
            android:id="@+id/fragment_home_sou"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_24"
            android:src="@drawable/common_nav_btn_search_n_hdpi"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.zhouwei.mzbanner.MZBannerView
                android:id="@+id/fragment_home_banner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_164"
                app:canLoop="true"
                android:layout_marginTop="@dimen/dp_20"
                app:open_mz_mode="true"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rxxp"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="热销新品"
                    android:textSize="@dimen/sp_16"
                    android:textColor="#ff7f57"
                    android:layout_centerInParent="true"
                    android:gravity="center_vertical"/>
                <ImageView
                    android:id="@+id/fragment_home_rxxp_d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/dp_24"
                    android:src="@drawable/pzshs"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/fragment_home_xxxp_recy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_10">

            </android.support.v7.widget.RecyclerView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rxxp"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="魔力时尚"
                    android:textSize="@dimen/sp_16"
                    android:textColor="#416cbe"
                    android:layout_centerInParent="true"
                    android:gravity="center_vertical"/>
                <ImageView
                    android:id="@+id/fragment_home_mlss_d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/dp_24"
                    android:src="@drawable/mlsss"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/fragment_home_mlss_recy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_24">

            </android.support.v7.widget.RecyclerView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rxxp"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="品质生活"
                    android:textSize="@dimen/sp_16"
                    android:textColor="#f11242"
                    android:layout_centerInParent="true"
                    android:gravity="center_vertical"/>
                <ImageView
                    android:id="@+id/fragment_home_pzsh_d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/dp_24"
                    android:src="@drawable/rxxps"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/fragment_home_pzsh_recy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_24">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>

    </ScrollView>
</LinearLayout>